<div class="col-lg-9 col-md-8">
  <div class="dashboard-body">
    <div class="dashboard-caption">
      <div class="dashboard-caption-header">
        <h4><i class="ti-lock"></i>Upload Cover Letters</h4>
      </div>
      <div class="dashboard-caption-wrap">
        <%= render 'shared/form_error_message' %>
        <% if @user.cover_letters.attached? %>
          <p><%= @user.cover_letters.count %> Cover Letter Found</p>
          <% @user.cover_letters.reverse.each do |cover_letter| %>
            <div>
              <%= link_to cover_letter.filename, download_user_cover_letter_path(@user, cover_letter), class: 'resume' %>
              <div>
                <%= link_to download_user_cover_letter_path(@user, cover_letter), class: 'btn btn-primary download-btn', title: 'Download' do %>
                  <i class="fa fa-download"></i>
                <% end %>
                <%= link_to user_cover_letter_path(@user, cover_letter), method: :delete, class: 'btn btn-danger', title: 'Delete' do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>No Cover Letter Found</p>
        <% end %>
        <%= form_with model: @user, url: user_cover_letters_path(@user), method: :post do |f| %>
          <div class='row'>
            <div class='col-md-12 col-sm-12'>
              <%= f.file_field :cover_letter, class: 'form-control file-field' %>
            </div>
          </div>
          <div class='row mrg-top-30'>
            <div class='col-md-12 col-sm-12'>
              <div class='form-group text-center'>
                <%= f.submit 'Upload Cover Letter', class: 'btn btn-primary theme-bg' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
