<% if params[:category].present? %>
  <% @title  = "#{params[:category]} jobs in Nepal | Jobs in Nepal" %>
  <% if @category_count > 0 %>
    <% @description = "#{@category_count} #{params[:category]} #{'job'.pluralize(@category_count)} in Nepal. Search and Apply for #{params[:category]} jobs in Nepal." %>
  <% else %>
    <% @description = "#{params[:category]} jobs in Nepal. Search and Apply for #{params[:category]} jobs in Nepal." %>
  <% end %>
<% else %>
  <% @title  = "Search and Apply Jobs in Nepal | Jobs in Nepal" %>
<% end %>

<!-- Title Header Start -->
<section class="inner-header-title">
  <div class="container">
    <h1>Browse Jobs</h1>
  </div>
</section>
<div class="clearfix"></div>
<!-- Title Header End -->

<!-- ========== Begin: Brows job ===============  -->
<section>
  <div class="container">
    <!-- Company Searrch Filter Start -->
    <div class="row extra-mrg">
      <div class="wrap-search-filter">
        <%= form_with url: jobs_path, method: :get, local: true do |f| %>
          <div class="col-md-4 col-sm-4">
            <%= f.text_field :title, placeholder: 'Enter Job Title', class: 'form-control' %>
          </div>
          <div class="col-md-3 col-sm-3">
            <%= f.text_field :location, placeholder: 'Enter City Name', class: 'form-control' %>
          </div>
          <div class="col-md-3 col-sm-3">
            <%= f.select :category, Category::LIST.keys.sort, { prompt: '-- Select --' }, class: 'form-control' %>
          </div>
          <div class="col-md-2 col-sm-2">
            <%= f.submit 'Filter', class: 'btn btn-primary full-width' %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Company Searrch Filter End -->

    <%= render 'jobs', jobs: @jobs %>

    <!--/.row-->
    <div class="row">
      <div class="digg_pagination">
        <%= will_paginate @jobs %>
      </div>
    </div>
  </div>
</section>
<!-- ========== Begin: Brows job End ===============  -->
