<% @title  = "Login | Jobs in Nepal" %>
<% @description = "Login to Post or Apply jobs in Nepal." %>
<!-- Title Header Start -->
<section class="inner-header-title gray-bg">
  <div class="container">
    <h1 class="cl-default">Login</h1>
  </div>
</section>
<div class="clearfix"></div>
<!-- Title Header End -->

<!-- Accordion Design Start -->
<section class="accordion">
  <div class="container">
    <div class="row">
      <div class='col-md-3'></div>
      <div class="col-md-6 col-sm-6">
        <div class="sidebar-wrapper">
          <div class="sidebar-box-header bb-1">
            <h4>Login</h4>
          </div>

          <% if @account_pending %>
            <p class='alert alert-danger'>You need to activate your account. Please check your email for activation link.</p>
          <% end %>
          <%= form_with url: sessions_path, local: true do |f| %>
            <div class="form-group">
              <%= f.label :email  %>
              <div class="input-with-icon">
                <%= f.email_field :email, placeholder: 'Enter Your Email', class: 'form-control', required: true %>
                <i class="theme-cl ti-email"></i>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password  %>
              <div class="input-with-icon">
                <%= f.password_field :password, placeholder: 'Enter Your Password', class: 'form-control', required: true %>
                <i class="theme-cl ti-lock"></i>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 mrg-top-5">
                <span class="custom-checkbox">
                </span> Forgat Password? <%= link_to 'Click Here', new_password_reset_path, class: 'cl-success' %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-center mrg-top-25">
                <%= f.submit 'Login', class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Accordion Design End -->

