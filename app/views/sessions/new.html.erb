<!-- Title Header Start -->
<section class="inner-header-title gray-bg">
  <div class="container">
    <h2 class="cl-default">Login</h2>
  </div>
</section>
<div class="clearfix"></div>
<!-- Title Header End -->

<!-- Accordion Design Start -->
<section class="accordion">
  <div class="container">
    <div class="row">
      <div class='col-md-3'></div>
      <div class="col-md-6 col-sm-6">
        <div class="sidebar-wrapper">
          <div class="sidebar-box-header bb-1">
            <h4>Login</h4>
          </div>

          <%= form_with url: sessions_path, local: true, class: 'billing-form' do |f| %>
            <div class='row'>
              <div class="col-xs-12">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>
              </div>
            </div>
            <div class='row'>
              <div class="col-xs-12">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 mrg-top-5">
                <span class="custom-checkbox">
                </span> Forgat Password? <a href="#" class="cl-success">Click Here</a>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-center mrg-top-25">
                <%= f.submit 'Login', class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Accordion Design End -->

