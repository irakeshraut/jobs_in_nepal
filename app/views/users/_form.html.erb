<%= form_with model: @user do |f| %>
  <div class="form-group">
    <%= f.label :first_name  %>
    <div class="input-with-icon">
      <%= f.text_field :first_name, placeholder: 'Enter Your First Name', class: 'form-control', required: true %>
      <i class="theme-cl ti-user"></i>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name  %>
    <div class="input-with-icon">
      <%= f.text_field :last_name, placeholder: 'Enter Your Last Name', class: 'form-control', required: true %>
      <i class="theme-cl ti-user"></i>
    </div>
  </div>
  <div>
  </div>
  <div class="form-group">
    <%= f.label :email  %>
    <div class="input-with-icon">
      <%= f.email_field :email, placeholder: 'Enter Your Email', class: 'form-control', required: true %>
      <i class="theme-cl ti-email"></i>
    </div>
  </div>

  <% if controller.controller_name == 'users' && controller.action_name == 'edit' %>
    <% if current_user.job_seeker? %>
      <div class="form-group">
        <%= f.label :phone_no, 'Phone Number'  %>
        <div class="input-with-icon">
          <%= f.phone_field :phone_no, placeholder: 'Enter Your Phone Number', class: 'form-control' %>
          <i class="theme-cl ti-mobile"></i>
        </div>
      </div>
    <% end %>
    <% if current_user.job_seeker? || current_user.admin? %>
      <div class="form-group">
        <%= f.label :avatar %>
        <div class="input-with-icon">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: 'img-responsive', style: 'width: 200px; display: block'  %>
            <%= @user.avatar.filename %>
          <% end %>
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
      </div>
    <% end %>
  <% end %>

  <% if controller.controller_name == 'users' && controller.action_name == 'new' %>
    <div class="form-group">
      <%= f.label :password  %>
      <div class="input-with-icon">
        <%= f.password_field :password, placeholder: 'Enter Your Password', class: 'form-control', required: true %>
        <i class="theme-cl ti-lock"></i>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation  %>
      <div class="input-with-icon">
        <%= f.password_field :password_confirmation, placeholder: 'Enter Your Password', class: 'form-control', required: true %>
        <i class="theme-cl ti-lock"></i>
      </div>
    </div>
  <% end %>
  <% if controller.controller_name == 'users' && controller.action_name == 'new' %>
    <div class="register-account text-center">
      By hitting the <span class="theme-cl">"Register"</span> button, you agree to the <a class="theme-cl" href="#">Terms conditions</a> and <a class="theme-cl" href="#">Privacy Policy</a>
    </div>
    <div class="form-group">
      <%= f.submit 'Register', class: 'btn btn-primary theme-bg full-width' %>
    </div>
  <% else %>
    <div class='row mrg-top-30'>
      <div class='col-md-12 col-sm-12'>
        <div class='form-group text-center'>
          <%= f.submit 'Update Profile', class: 'btn btn-primary theme-bg' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
