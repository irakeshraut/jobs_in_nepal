<div class="col-lg-9 col-md-8">
  <div class="dashboard-body">
    <div class="dashboard-caption">
      <div class="dashboard-caption-header">
        <h4><i class="ti-lock"></i>Change Password</h4>
      </div>
      <div class="dashboard-caption-wrap">
        <%= render 'shared/error_messages', object: @user %>
        <% if @invalid_current_password %>
          <p class='alert alert-danger'>Invalid current password.</p>
        <% end %>

        <%= form_with url: update_password_user_path(@user), local: true do |f| %>
          <div class="form-group">
            <%= f.label :current_password, 'Current Password'  %>
            <div class="input-with-icon">
              <%= f.password_field :current_password, placeholder: 'Enter Current Password', class: 'form-control', required: true %>
              <i class="theme-cl ti-lock"></i>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, 'New Password'  %>
            <div class="input-with-icon">
              <%= f.password_field :password, placeholder: 'Enter Your New Password (Minimum 8 characters)', class: 'form-control', required: true %>
              <i class="theme-cl ti-lock"></i>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, 'Password Confirmation'  %>
            <div class="input-with-icon">
              <%= f.password_field :password_confirmation, placeholder: 'Enter Your New Password (Minimum 8 characters)', class: 'form-control', required: true %>
              <i class="theme-cl ti-lock"></i>
            </div>
          </div>
          <div class='row mrg-top-30'>
            <div class='col-md-12 col-sm-12'>
              <div class='form-group text-center'>
                <%= f.submit 'Update Password', class: 'btn btn-primary theme-bg' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
