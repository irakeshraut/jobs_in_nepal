<div class="col-lg-9 col-md-8">
  <div class="dashboard-body">
    <div class="dashboard-caption">
      <div class="dashboard-caption-header">
        <h4><i class="fa fa-home"></i>Edit Company Details</h4>
      </div>
      <div class="dashboard-caption-wrap">
        <p class='alert alert-info'>Company details will be attached to all job you post.</p>
        <%= render 'shared/error_messages', object: @company %>
        <%= form_with model: @company, local: true do |f| %>
          <div class='row'>
            <div class='col-md-6 col-sm-6'>
              <div class="form-group">
                <%= f.label :name, 'Business Name'  %>
                <div class="input-with-icon">
                  <%= f.text_field :name, placeholder: 'Enter Business Name', class: 'form-control', required: true %>
                  <i class="theme-cl ti-home"></i>
                </div>
              </div>
            </div>
            <div class='col-md-6 col-sm-6'>
              <div class="form-group">
                <%= f.label :phone, 'Business Phone Number'  %>
                <div class="input-with-icon">
                  <%= f.text_field :phone, placeholder: 'Enter Business Phone Number', class: 'form-control', required: true %>
                  <i class="theme-cl ti-mobile"></i>
                </div>
              </div>
            </div>
          </div>
          <div class='row'>
            <div class='col-md-12 col-sm-12'>
              <div class="form-group">
                <%= f.label :url, 'Business URL'  %>
                <div class="input-with-icon">
                  <%= f.text_field :url, placeholder: 'Enter Business URL', class: 'form-control' %>
                  <i class="theme-cl ti-world"></i>
                </div>
              </div>
            </div>
          </div>
          <div class='row'>
            <div class='col-md-12 col-sm-12'>
              <div class="form-group">
                <%= f.label :logo, 'Business Logo'  %>
                <% if @company.logo.attached? && @company.logo.persisted? %>
                  <%= image_tag @company.logo, class: 'img-responsive', style: 'width: 200px; display: block'  %>
                  <%= link_to delete_logo_company_path(@company), data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash"></i> Delete Logo
                  <% end %>
                <% end %>
                <%= f.file_field :logo, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class='row'>
            <div class='col-md-12 col-sm-12'>
              <div class="form-group">
                <%= f.label 'Description (Recommended)' %>
                <div>
                  <%= f.rich_text_area :description, placeholder: 'Enter Description About Company', class: 'form-control customized-min-height' %>
                </div>
              </div>
            </div>
          </div>
          <div class='row mrg-top-30'>
            <div class='col-md-12 col-sm-12'>
              <div class='form-group text-center'>
                <%= f.submit 'Update Company Detail', class: 'btn btn-primary theme-bg' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
